---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center min-h-[60vh] py-16">
    <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-4">404</h1>
    <h2 class="text-2xl md:text-3xl font-semibold text-gray-800 mb-6">
      Page Not Found
    </h2>
    <p class="text-xl text-gray-600 mb-8 text-center max-w-xl">
      Sorry, we couldn't find the page you're looking for.
    </p>
    <a
      href="/"
      class="bg-blue-600 text-white hover:bg-blue-700 px-6 py-3 rounded-lg font-medium"
    >
      Return Home
    </a>
  </div>
</Layout>
